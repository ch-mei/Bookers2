<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
      <tr>
        <td>
          <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
        </td>
        <td>
          <%= link_to book_path do %>
            <%= @book.title %>
          <% end %>
          <% if @book.user == current_user %>
            <td>
              <%= link_to "Edit", edit_user_path, class: 'btn btn-sm btn-success' %>
            </td>
            <td>
              <%= link_to "Destroy", book_path, method: :delete, class: 'btn btn-sm btn-danger' %>
            </td>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>